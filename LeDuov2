            onClick={()=>setState({...state,activeUser:state.activeUser===0?1:0})}
            style={{
              padding:"6px 12px",
              borderRadius:8,
              border:"none",
              background:"#2a1a30",
              color:"#fff"
            }}>
            Trocar UsuÃ¡rio
